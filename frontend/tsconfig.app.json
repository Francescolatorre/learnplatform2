{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "paths": {
      "@components/*": [
        "./components/*"
      ],
      "@features/*": [
        "./features/*"
      ],
      "@services/*": [
        "./services/*"
      ],
      "@store/*": [
        "./store/*"
      ],
      "@hooks/*": [
        "./hooks/*"
      ],
      "@utils/*": [
        "./utils/*"
      ],
      "@styles/*": [
        "./styles/*"
      ],
      "@assets/*": [
        "./assets/*"
      ],
      "@context/*": [
        "./context/*"
      ],
      "@pages/*": [
        "./pages/*"
      ],
      "@typedefs/*": [
        "./types/*"
      ],
    }
  },
  "include": [
    "src/**/*",
    "vite.config.ts",
    "vitest.config.ts",
    "playwright.config.ts",
    "playwright-api.config.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
