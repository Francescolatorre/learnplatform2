{
  "compilerOptions": {
    "target": "ESNext",
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable"
    ],
    "types": [
      "vitest/globals",
      "node"
    ],
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "baseUrl": "./",
    "paths": {
      "@components/*": [
        "src/components/*"
      ],
      "@utils/*": [
        "src/utils/*"
      ],
      "@features/*": [
        "src/features/*"
      ],
      "@routes/*": [
        "src/routes/*"
      ],
      "@assets/*": [
        "src/assets/*"
      ],
      "@hooks/*": [
        "src/hooks/*"
      ],
      "@styles/*": [
        "src/styles/*"
      ],
      "@context/*": [
        "src/context/*"
      ],
      "@constants/*": [
        "src/constants/*"
      ],
      "@services/*": [
        "src/services/*"
      ],
      "@types/*": [
        "./types/*"
      ],
      "@store/*": [
        "src/store/*"
      ]
    },
    "sourceMap": true,
    "isolatedModules": true,
    "noUnusedLocals": true,
    "outDir": "dist",
    "allowImportingTsExtensions": true,
    "noEmit": true
  },
  "include": [
    "src/**/*",
    "vite.config.ts",
    "vitest.config.ts",
    "playwright.config.ts",
    "playwright-api.config.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
